{% extends "layout/document.njk" %}{% block headtitle %}    {{ fileName }} > Markdown Publish{% endblock %}{% block content %}    <div class="document-markdown__title">        <svg class="small-icon" viewBox="0 0 16 16" version="1.1" width="16" height="16" aria-hidden="true"><path fill-rule="evenodd" d="M3 5h4v1H3V5zm0 3h4V7H3v1zm0 2h4V9H3v1zm11-5h-4v1h4V5zm0 2h-4v1h4V7zm0 2h-4v1h4V9zm2-6v9c0 .55-.45 1-1 1H9.5l-1 1-1-1H2c-.55 0-1-.45-1-1V3c0-.55.45-1 1-1h5.5l1 1 1-1H15c.55 0 1 .45 1 1zm-8 .5L7.5 3H2v9h6V3.5zm7-.5H9.5l-.5.5V12h6V3z"></path></svg>        {{ fileName }}    </div>    <div class="document-markdown__content">        {{ markdown | safe }}    </div>{% endblock %}{% block function %}    <button type="button" class="button button-copyhtml">Copy HTML</button>    <button type="button" class="button button-copyimage">ImageToCode</button>    <button type="button" class="button button-save">Save</button>    <button type="button" class="button-movetop">Top</button>{% endblock %}{% block script %}<script type="text/javascript">    function copyToClipboard( selector, str ) {        var targetContent = document.querySelector(selector).innerHTML,            t = document.createElement("textarea");        if(str) targetContent = str;        document.body.appendChild(t);        t.value = targetContent;        t.select();        return new Promise(function(resolve, reject) {            document.execCommand('copy');            document.body.removeChild(t);            resolve();        });    }    document.querySelector('.button-copyhtml').addEventListener('click', function(e) {        $.get('/API/markup' + location.pathname).done(function(res) {            copyToClipboard( "#content", res.markup ).then(function() {                $.toast({                    heading: 'Success',                    icon: 'success',                    loader: true,                    textAlign : 'left',                    position : 'top-center',                    text : "HTML 이 클립보드에 복사되었습니다"                });            });        });    });</script>{% endblock %}