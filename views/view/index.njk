{% extends "layout/common.njk" %}{% block headtitle %}{{ fileName }}{% endblock %}{% block headresource %}    <link rel="stylesheet" href="/resources/css/view.css" />{% endblock %}{% block content %}    <div class="document-title">Markdown Viewer</div>    <div class="view-markdown">        <div class="view-markdown__title">            <svg class="small-icon" viewBox="0 0 16 16" version="1.1" width="16" height="16" aria-hidden="true"><path fill-rule="evenodd" d="M3 5h4v1H3V5zm0 3h4V7H3v1zm0 2h4V9H3v1zm11-5h-4v1h4V5zm0 2h-4v1h4V7zm0 2h-4v1h4V9zm2-6v9c0 .55-.45 1-1 1H9.5l-1 1-1-1H2c-.55 0-1-.45-1-1V3c0-.55.45-1 1-1h5.5l1 1 1-1H15c.55 0 1 .45 1 1zm-8 .5L7.5 3H2v9h6V3.5zm7-.5H9.5l-.5.5V12h6V3z"></path></svg>            {{ fileName }}        </div>        <div class="view-markdown__content">            {{ markdownToHtml | safe }}        </div>    </div>    <div class="view-function">        <button type="button" class="button button-copyhtml" id="copyHtml">Copy HTML</button>        <button type="button" class="button-movetop">Top</button>    </div>{% endblock %}{% block script %}<script type="text/javascript">    $(function() {        function copyHtml(e) {            $.get('/API/markup' + location.pathname).done(function(res) {                copyToClipboard( "#content", res.markup ).then(function() {                    $.toast({                        heading: 'Success',                        icon: 'success',                        loader: true,                        textAlign : 'left',                        position : 'top-center',                        text : "HTML 이 클립보드에 복사되었습니다"                    });                });            });        }        $('#copyHtml').on('click', copyHtml);    });</script>{% endblock %}